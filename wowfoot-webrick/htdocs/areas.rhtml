<%
def sortAreas
	arr = []
	WORLD_MAP_AREA.each_pair do |id, hash|
		arr << {:id => id, :name => hash[:name]}
	end
	return arr.sort {|a,b| a[:name] <=> b[:name] }
end

areas = sortAreas
%>
<p>Areas:</p>

<p><table><tr><td>ID</td><td>Name</td></tr>

<%=
s = ''
areas.each {|a|
	s += "<tr><td>#{a[:id]}</td><td><a href=\"area=#{a[:id]}\">#{a[:name]}</a></td></tr>"
}
s
%>
</table>
</p>
</body>
</html>
