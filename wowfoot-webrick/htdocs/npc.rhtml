<html>
<body>

<%
@id = id[1]
run 'npc.rb'

if(@mainZone)
	map = "#{AREA_TABLE[@mainZone][:name]}<br>\n"
	map += "<img width=\"100%\" src=\"output/#{WORLD_MAP_AREA[@mainZone][:name]}.jpeg\">\n"
else
	map = ''
end
%>

<p>NPC:</p>

<p>
<%= @template.inspect %>
</p>

<p>
<%= @coords.size %> spawn-points.
</p>


<STYLE type="text/css">
	div { position:relative; }	/* Enables absolute positioning relative to div tags. */
	#map { width:40% }	/* Enables use of percentages inside. */
	#circle { position:absolute; left: 50%; top: 50%; }
</STYLE>

<div id="map">
<%= map %>
<img id="circle" src="static/circle.png">
</div>

</body>
</html>
