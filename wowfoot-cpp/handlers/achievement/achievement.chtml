<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
	<title><%= mTitle %> - Achievement - WowFoot</title>
	<LINK href="static/style.css" rel="stylesheet" type="text/css">
	<META http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body>

% if(a) {
<p>
<span class="itemName">Achievement: <%= mTitle %></span><br>
% if(a->description) {
<span class="itemDescription"><%=a->description%></span><br>
% }
</p>

<p><%=a->points%> points.</p>

% if(a->reward) {
<p>Reward description: <%=a->reward%></p>
% }
% } else {
<p><%= mTitle %> not found.</p>
% }

% if(ar) {
<p>Reward:</p>

% if(ar->title_A) {
<p>Title
% if(ar->title_A == ar->title_H) {
(both factions):
% } else {
(Alliance):
% }
<a href="title=<%= ar->title_A %>"><%streamName(stream, gTitles, ar->title_A);%></a></p>
% }
% if(ar->title_H && ar->title_H != ar->title_A) {
<p>Title (Horde): <a href="title=<%= ar->title_H %>"><%streamName(stream, gTitles, ar->title_H);%></a></p>
% }

% if(ar->item) { gItems.load(); gNpcs.load();
<p>Item (via mail): <a href="item=<%= ar->item %>"><%streamName(stream, gItems, ar->item);%></a><br>
Sender: <a href="npc=<%= ar->sender %>"><%streamName(stream, gNpcs, ar->sender);%></a><br>
Subject: <%= ar->subject %><br>
Message: <% streamWowFormattedText(stream, ar->text); %><br>
</p>
% }
% }	//ar

% if(a) {
<p>
Faction: <%=FACTION(a->faction)%><br>
% if(a->previous) {
Previous: <a href="achievement=<%=a->previous%>"><%=gAchievements[a->previous].name%></a><br>
% }
</p>

% returnCode = tabsChtml::run(stream);
% }

</body>
</html>
